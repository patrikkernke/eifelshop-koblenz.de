/**
 *
 * Splash component
 *
 */
 
.Splash
    // structure
    position: relative
    z-index: 1000

.Splash h4
    // structure
    margin-top: rhythm(10)
    padding: rhythm(5) rhythm(10)
    // theme-style
    color: color.text_negative
    font-size: rhythm(4)
    line-height: 125%
    border: 2px solid color.background
    border-radius: 3px
    
    
